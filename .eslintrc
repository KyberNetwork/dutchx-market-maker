{
  "extends": ["prettier-standard"],
  "plugins": ["mocha", "chai-friendly"],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "chai-friendly/no-unused-expressions": 2
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "artifacts": true,
    "contract": true,
    "assert": true,
    "web3": true
  }
}
